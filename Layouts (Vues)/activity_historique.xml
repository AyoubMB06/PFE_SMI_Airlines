<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Historique">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/departure"
         />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TableRow>
            <TextView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="Billet N°:"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f0f0f0"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                />

            <TextView
                android:id="@+id/hist_num"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f0f0f0"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="Date de réservation:"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f0f0f0"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                />

            <TextView
                android:id="@+id/hist_date"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f0f0f0"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="Départ-Arrivée:"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f0f0f0"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                />

            <TextView
                android:id="@+id/hist_deparr"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f0f0f0"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>
        </TableRow>




        <TableRow>
            <TextView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:text="Prix:"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f0f0f0"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                />

            <TextView
                android:id="@+id/hist_prix"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#f0f0f0"
                android:textColor="@color/black"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>
        </TableRow>

            <Button
                android:id="@+id/butt_accueil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:background="@drawable/rounded_button"
                android:text="Cliquez-ici pour revenir à la page d'accueil"
                />


    </TableLayout>


</LinearLayout>